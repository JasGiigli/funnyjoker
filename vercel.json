{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js", // Update the path to your backend entry file
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**", // Update the path to your frontend build files
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Adjust the API route based on your backend setup
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}
